        <Label x:Name="label1" Content="ARA" HorizontalAlignment="Left" Margin="30,95,0,0" VerticalAlignment="Top" Height="32" Width="64"/>
        <TextBox x:Name="textBox" HorizontalAlignment="Left" Height="23" Margin="94,95,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="138"/>
        <Button x:Name="button" Content="ARA" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="94,137,0,0" Background="#FF0043FD" Click="button_Click"/>
        <Button x:Name="button1" Content="MalzemeEkleSil" HorizontalAlignment="Left" VerticalAlignment="Top" Width="95" Margin="150,391,0,0" Background="#FFF400FF" Click="button1_Click"/>
        <Button x:Name="button2" Content="Malzemeler" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="75,391,0,0" Background="#FFF400FF" Click="button2_Click"/>
        <Button x:Name="button3" Content="KullanıcıEkle" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="0,391,0,0" Background="#FFF400FF" Click="button3_Click"/>

    </Grid>
</Window>
