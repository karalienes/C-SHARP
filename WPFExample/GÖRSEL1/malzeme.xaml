        xmlns:local="clr-namespace:GÖRSEL1"
        mc:Ignorable="d"
        Title="malzeme" Height="450" Width="800"
        Background="DeepSkyBlue"
        WindowStartupLocation="CenterScreen"
        Loaded="Window_Loaded"

        >
    <Grid>
        <DataGrid x:Name="dataGrid" HorizontalAlignment="Left" Height="200" Margin="10,178,-0.4,0" VerticalAlignment="Top" Width="784"/>
