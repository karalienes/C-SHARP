        <TextBox x:Name="text" HorizontalAlignment="Left" Height="23" Margin="75,95,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="138"/>
        <Button x:Name="button" Content="ARA" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="75,132,0,0" Background="#FF0043FD" Click="button_Click" />
        <Button x:Name="button3" Content="MalzemeEkleSil" HorizontalAlignment="Left" VerticalAlignment="Top" Width="95" Margin="150,492,0,0" Background="#FF00FF03" Click="button3_Click"  />
        <Button x:Name="button2" Content="Malzemeler" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="75,492,0,0" Background="#FF0FFF00" Click="button2_Click"  />
        <Button x:Name="button1" Content="KullanıcıEkle" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="0,492,0,0" Click="button1_Click" Background="#FF18FF00"/>
    </Grid>
</Window>
